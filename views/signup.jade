extends ./layout.jade
block contenido
    div(class="row")
        div(class="col-md-4 remove-float center-block big-top-space " )
        div(class="col-md-4 remove-float center-block big-top-space" )
            form(action="/users", method="POST")
                div(class="form-group")
                    label(for="email") Email
                    input(type="text", name="email", placeholder="Email", id="email" class="form-control")
                div
                    label(for="password") Password
                    input(type="password", name="password", placeholder="Password", id="password" class="form-control")
                div
                    label(for="password_confirmation") Confirm Password
                    input(type="password", name="password_confirmation", placeholder="Confirm Password", id="password_confirmation" class="form-control")
                div
                    label(for="username") User Name
                    input(type="text", name="username", placeholder="username", id="username" class="form-control")        
                           
                div(class="row top-space")
                    div(class="col-xs-12 col-md-6")   
                        input(type="submit" value="Registrarme" class="btn btn-info")
                    div(class="col-xs-12 col-md-6 text-right")   
                        a(href="/login") Ya tengo cuenta 