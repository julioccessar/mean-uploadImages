extends ../../layout.jade
block contenido
    h1 Editar Imagen
    div(class="row")
        div(class="col-md-4 remove-float center-block big-top-space " )
        div(class="col-md-4 remove-float center-block big-top-space " )
            form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")
               
                div(class="form-group")
                    label(for="title") Titulo
                    input(type="text", name="title", placeholder="titulo", id="title", value="#{imagen.title}",class="form-control")
                
                div(class="row top-space")
                    div(class="col-xs-12 col-md-6")   
                        input(type="submit" value="Guardar" class="btn btn-info") 
                    