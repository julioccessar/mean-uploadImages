extends ../../layout.jade
block contenido
    h1 Agregar Nueva Imagen
    div(class="row")
        div(class="col-md-4 remove-float center-block big-top-space " )
        div(class="col-md-4 remove-float center-block big-top-space " )
            form(action="/app/imagenes" method="POST" enctype="multipart/form-data")
                div(class="form-group")
                    label(for="title") Titulo
                    input(type="text", name="title", placeholder="titulo", id="title", class="form-control")
                div
                    label(for="archivo") Archivo
                    input(type="file", name="archivo", id="archivo", class="form-control")

                div(class="row top-space")
                    div(class="col-xs-12 col-md-6")   
                        input(type="submit" value="Guardar" class="btn btn-info") 
                    